<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:background="@color/background"
    tools:context=".signup">



    <TextView

        android:layout_alignParentTop="true"
        android:id="@+id/text_createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:text="Créer votre compte"
        android:textColor="@color/white"
        android:textSize="25dp">

    </TextView>

    <EditText
        android:textColor="@color/white"
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_createAccount"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nom et Prénom"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/white">


    </EditText>


    <EditText
        android:textColor="@color/white"
        android:maxLength="10"
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Numéro de téléphone "
        android:inputType="phone"
        android:padding="15dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/white"></EditText>

    <EditText
        android:textColor="@color/white"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/white"></EditText>
    <EditText
        android:textColor="@color/white"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Mot passe"
        android:inputType="textPassword"
        android:padding="15dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/white"></EditText>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/wilaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_room_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Wilaya"
        android:textSize="20sp"
        android:padding="15dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/white"></TextView>


    <Button
        android:layout_marginBottom="120dp"
       android:layout_alignParentBottom="true"
        android:id="@+id/signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/roboto_medium"
        android:text="Sign UP"
        android:textColor="@color/black"></Button>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/accent_bg">
    </ImageView>




</RelativeLayout>