<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".reservermaintenant">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:text="Reserver maintenant "
        android:textColor="@color/item"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/type"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text="Type de chambre"
        android:textStyle="bold"
        android:elevation="8dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/inpuut"
        >

</TextView>

    <TextView
        android:id="@+id/date1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text="Date d'entrée"
        android:textStyle="bold"
        android:elevation="8dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/inpuut"
        >


    </TextView>

    <TextView
        android:id="@+id/date2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text="Date de Sortie"
        android:textStyle="bold"
        android:elevation="8dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/inpuut"
        >


    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="horizontal" >
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Somme Total :"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="17sp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center_vertical"

        android:layout_marginLeft="20dp"
        >


    </TextView>
    <TextView
        android:id="@+id/somme"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="17sp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/black"
        android:gravity="center_vertical"

        android:layout_marginLeft="20dp"
        >


    </TextView>

</LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Versement CCP :"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="17sp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center_vertical"

        android:layout_marginLeft="20dp"
        >


    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="il faut verser 30% du montant Total pour que votre reservation doit etre validé (cliquer sur image)"
        android:elevation="8dp"
        android:textSize="14sp"
        android:textColor="@color/noir"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        >


    </TextView>
    <TextView
        android:id="@+id/entrerphoto"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text="Entrer la Photo"
        android:textStyle="bold"
        android:elevation="8dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/item"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/inpuut"
        >

    </TextView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"

        >
</ImageView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/res"
        android:background="@drawable/btn"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="Reserver"
        android:fontFamily="@font/amiko"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"

        >

</Button>
    </RelativeLayout>



</LinearLayout>